{
    "exclude": ["node_modules", "test", "**/*.test.ts", "**/*.spec.ts"],
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "node16",
        "target": "es2020",
        "moduleResolution": "node16",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "index.ts"]
}